<IfModule !authnz_pam_module>
    LoadModule authnz_pam_module modules/mod_authnz_pam.so
</IfModule>

<IfModule rewrite_module>
    RewriteEngine on
    RewriteRule ^/rspamd$ /rspamd/ [R]
</IfModule>

<Location /rspamd>
    ProxyAddHeaders off
    ProxyPass  http://localhost:11334
    ProxyPassReverse http://localhost:11334
    AuthName "rspamd"
    AuthType Basic
    AuthBasicProvider file PAM
    AuthUserFile /etc/httpd/conf/rspamd.secret
    AuthPAMService rspamd
    Require valid-user
{
    my $public = $rspamd{'PublicAccess'} || "enabled";
    my $access = "all granted";
    if ($public eq "disabled") {
        $access = "ip $localAccess";
    }
    $OUT .= "Require $access\n";
}
</Location>

<Location ~ ^/rspamd/saveactions($|/)>
    ProxyPass "!"
</Location>
