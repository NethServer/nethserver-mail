#
# worker-controller
#

worker \{
{
use NethServer::Password;
use esmith::ConfigDB;

my $db = esmith::ConfigDB->open;
my $password = NethServer::Password::store('rspamd');
my $worker = $rspamd{MaxProcesses} || '1';

$OUT .= qq (

    # socket for worker-controller
    bind_socket = "127.0.0.1:11334";

    # number of worker
    count = $worker;
    type = "controller";
    secure_ip = "127.0.0.1";
    static_dir = "\$\{WWWDIR\}";
);
}
\}


