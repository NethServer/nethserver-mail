
#
# Accept SMTP recipient by exact domain name
#

{
if(defined $rspamd{RecipientWhiteList}) {
    foreach my $domain (split(',', ($rspamd{RecipientWhiteList}))) {

        if ($domain =~ m/@/){
            next;
        }
        my $count = () = $domain =~ m/\./g;
        push @whitelist, $domain if ($count > 1 );
    }

    foreach my $lines (@whitelist){
        $OUT .= "$lines\n";
    }
}
}
