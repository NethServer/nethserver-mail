
#
# whitelist sub.domains from
#

{
if(defined $rspamd{SenderWhiteList}) {
    foreach my $domain (split(',', ($rspamd{SenderWhiteList}))) {
    
        if ($domain =~ m/@/){
           next;
        }
        my $count = () = $domain =~ m/\./g;
        push @whitelist, $domain if ($count > 1 );
    }

    foreach my $lines (@whitelist){
    $OUT .= "$lines\n";
    }
}
}
