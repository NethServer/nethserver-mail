#
# 10base -- Expansion of rspamd SenderBlackList prop
#

{

    if( ! $rspamd{'SenderBlackList'}) {
        return '';
    }

    $OUT = '';
    foreach my $rule ( split(',', lc($rspamd{'SenderBlackList'})) ) {
        if ($rule =~ m/@/) {
            $OUT .= "/^\\Q$rule\\E\$/\n";
        } elsif ( scalar (() = ($rule =~ /\./g)) == 1 ) {
            $OUT .= "/[\.@]\\Q$rule\\E\$/\n";
        } else {
            $OUT .= "/@\\Q$rule\\E\$/\n";
        }
    }

}
