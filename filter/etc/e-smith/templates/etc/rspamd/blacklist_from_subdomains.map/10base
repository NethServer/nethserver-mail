
#
# Reject SMTP sender by exact domain name
#

{
if(defined $rspamd{SenderBlackList}) {
    foreach my $domain (split(',', ($rspamd{SenderBlackList}))) {

        if ($domain =~ m/@/){
            next;
        }
        my $count = () = $domain =~ m/\./g;
        push @blacklist, $domain if ($count > 1 );
    }

    foreach my $lines (@blacklist){
        $OUT .= "$lines\n";
    }
}
}
