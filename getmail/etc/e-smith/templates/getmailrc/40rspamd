{
    #
    # 40rspamd
    #

    my $filterCheck = $account->prop('FilterCheck') || 'disabled';

    if ($filterCheck eq 'enabled') {
        $OUT = <<EOF;
[filter-1]
type = Filter_external
path = /usr/bin/rspamc-getmail
arguments = ("-i", "127.0.0.1", "--mime", "-t", "120", "-h", "localhost:11334")
exitcodes_drop = (99, )
exitcodes_keep = (0, )
user = _rspamd
group = _rspamd
EOF
    } else {
        $OUT = '# rspamd filter checks are disabled';
    }
}

