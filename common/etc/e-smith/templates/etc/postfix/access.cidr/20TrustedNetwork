#
# 20TrustedNetwork -- IP based policy for Network
#
{
    if ($postfix{'AccessPolicies'} =~ 'trustednetworks') {
        use NethServer::TrustedNetworks;
        $CIDR = join(" ", NethServer::TrustedNetworks::list_cidr());

        foreach (split(/ /, $CIDR)) {
            $OUT .= sprintf("%s OK\n", $_);
        }
    }
}
