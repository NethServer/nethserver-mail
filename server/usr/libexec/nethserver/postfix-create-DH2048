#
# nethserver-mail-server
#
# Create the diffie hellman 2048 bit of postfix
#
# The DH group could be renewed from time to time for security concerns.

umask	077

# If we exit early, clean up intermediate files:
trap "rm -f /etc/pki/dovecot/private/postfix.dh.param.tmp" EXIT

/usr/bin/openssl dhparam -out /etc/pki/dovecot/private/postfix.dh.param.tmp 2048 > /dev/null 2>&1

if [[ $? != 0 ]];then
    exit 1;
fi

/usr/bin/mv -f /etc/pki/dovecot/private/postfix.dh.param.tmp /etc/pki/dovecot/private/postfix.dh.param

if [[ $? != 0 ]];then
    exit 1;
fi

/usr/bin/systemctl reload postfix

# Remove error cleanup procedure handler:
trap - EXIT
