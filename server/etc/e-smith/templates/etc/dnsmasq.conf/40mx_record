{
    if($postfix{'MxRecordStatus'} && $postfix{'MxRecordStatus'} eq 'enabled') {
        $OUT = "mx-host=$DomainName,smtp.$DomainName\n";
    } else {
        use esmith::DomainsDB;
        $OUT = '';
        foreach (esmith::DomainsDB->open_ro()->get_all_by_prop('type' => 'domain')) {
            $OUT .= 'mx-host=' . $_->key . "\n";
        }
    }
}

